@model Pulse360.Models.AddTrainingViewModel

<div class="card p-4">
    <form asp-action="EditTraining" method="post">
        <h3 class="text-start mb-4">Edit Training List</h3>
    <input type="hidden" asp-for="TrainingId" />
    <div class="form-group">
        <label for="TrainerId">Trainer</label>
        <select asp-for="TrainerId" class="form-control" asp-items="@(new SelectList(ViewBag.Trainers, "TrainerId", "FirstName"))"></select>
    </div>

    <div class="form-group">
        <label for="TrainingTypeId">Training Type</label>
        <select asp-for="TrainingTypeId" class="form-control" asp-items="@(new SelectList(ViewBag.TrainingTypes, "TrainingTypeId", "TrainingTypeName"))"></select>
    </div>

    <div class="form-group">
        <label for="UserId">Employee</label>
        <select asp-for="UserId" class="form-control" asp-items="@(new SelectList(ViewBag.Users, "UserId", "FirstName"))"></select>
    </div>

    <div class="form-group">
        <label for="TrainingCost">Training Cost</label>
        <input asp-for="TrainingCost" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Description">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label for="Status">Status</label>
        <select asp-for="Status" class="form-control">
            <option value="Active">Active</option>
            <option value="Inactive">Inactive</option>
        </select>
    </div>

    <div class="form-group">
        <label for="StartDate">Start Date</label>
        <input asp-for="StartDate" class="form-control" type="date" />
    </div>

    <div class="form-group">
        <label for="EndDate">End Date</label>
        <input asp-for="EndDate" class="form-control" type="date" />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>