<!-- 🔹 BUTTONS - Export & Add Ticket (Now at the Top) -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="text-primary" Style="text-color:black">Ticket Details</h3>
    <div>
        <div class="btn-group">
            <button type="button" class="btn btn-white border-gray dropdown-toggle" style="border:black 1px solid" data-bs-toggle="dropdown">
                <i class="ti ti-file-export me-1"></i> Export
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/TicketReply/ExportToExcel">Export to Excel</a></li>
                <li><a class="dropdown-item" href="/TicketReply/ExportToPdf">Export to PDF</a></li>
            </ul>
        </div>
        <button class="btn btn-warning" style="background-color: #f26522; color:White; border:none" data-bs-toggle="modal" data-bs-target="#addTicketModal">
            <i class="ti ti-circle-plus me-2"></i> Add Ticket
        </button>
    </div>
</div>
<div class="row">
    <!-- Left Section - Ticket List (2/3 Width: col-md-8) -->
    <div class="col-md-16">
        <div class="row">
            @foreach (var ticket in (dynamic)ViewBag.Tickets)
            {
                <div class="col-xl-12 mb-4">
                    <div class="card">
                        <div class="card-header d-flex align-items-center justify-content-between flex-wrap row-gap-3">
                            <div class="d-flex align-items-center">
                                <h5 class="text-info fw-medium me-2">@ticket.EventCategory</h5>
                            </div>
                            <div class="d-flex align-items-center">
                                <span class="badge @Pulse360.Controllers.TicketReplyController.GetPriorityBadgeClass(ticket.Priority)">
                                    <i class="ti ti-circle-filled fs-5 me-1"></i>@ticket.Priority
                                </span>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="d-flex align-items-center justify-content-between flex-wrap border-bottom mb-3">
                                <div>
                                    <span class="badge bg-info rounded-pill mb-2">Tic - @ticket.TicketId</span>
                                    <div class="d-flex align-items-center mb-2">
                                        <h6>@ticket.TicketTitle</h6>
                                        <span class="badge bg-outline-pink d-flex align-items-center ms-1">
                                            <i class="ti ti-circle-filled fs-5 me-1"></i>@ticket.Status
                                        </span>
                                    </div>
                                    <div class="d-flex align-items-center flex-wrap">
                                        <p class="mb-0 me-2">
                                            <i class="fa fa-person-circle me-1"></i> Assigned to <span class="text-dark">@ticket.AssignedToName</span>
                                        </p>
                                        <p class="d-flex align-items-center mb-0 me-2"><i class="ti ti-calendar-bolt me-1"></i> Updated @ticket.UpdatedAt hours ago</p>
                                        <button class="btn btn-sm" onclick="fetchReplies(@ticket.TicketId)">
                                            <i class="ti ti-message-circle-share me-1"></i> Comments (<span id="replyCount-@ticket.TicketId">@ticket.ReplyCount</span>)
                                        </button>
                                    </div>
                                </div>

                                <div>
                                    <button class="btn btn-warning" style="background-color: #f26522; color: white; border:none" onclick="showReplyForm(@ticket.TicketId)"><i class="ti ti-arrow-forward-up me-1"></i> Post a Reply</button>
                                </div>
                            </div>

                            <div class="border-bottom mb-3 pb-3">

                                <p class="mb-3">
                                    @ticket.TicketDescription
                                </p>

                            </div>

                            <div id="replyForm-@ticket.TicketId" class="mt-3 d-none">
                                <textarea id="replyMessage-@ticket.TicketId" class="form-control mb-2" placeholder="Enter your comment"></textarea>
                                <button class="btn btn-success" onclick="addReply(@ticket.TicketId)">Submit Reply</button>
                            </div>
                            <div id="replies-@ticket.TicketId" class="mt-3"></div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

