        <script>
            function showReplyForm(ticketId) {
                document.getElementById(`replyForm-${ticketId}`).classList.toggle('d-none');
            }

            function fetchReplies(ticketId) {
                const repliesDiv = document.getElementById(`replies-${ticketId}`);

                // Check if the replies section is already visible
                if (!repliesDiv.classList.contains('d-none')) {
                    repliesDiv.classList.add('d-none'); // Hide if visible
                } else {
                    $.ajax({
                        url: '/TicketReply/GetReplies',
                        type: 'GET',
                        data: { ticketId: ticketId },
                        success: function (result) {
                            $(`#replies-${ticketId}`).html(result);
                            repliesDiv.classList.remove('d-none'); // Show the replies
                        }
                    });
                }
            }

            function addReply(ticketId) {
                const replyMessage = $(`#replyMessage-${ticketId}`).val();
                const repliedBy = ""; // need to replace with name session

                if (replyMessage) {
                    $.ajax({
                        url: '/TicketReply/AddReply',
                        type: 'POST',
                        data: {
                            ticketId: ticketId,
                            replyMessage: replyMessage,
                            repliedBy: repliedBy
                        },
                        success: function () {
                            location.reload();
                            fetchReplies(ticketId);
                        }
                    });
                }
            }

        </script>

