@model IEnumerable<Pulse360.Models.TicketReplies>

@if (Model.Any())
{
    <div class="border-top pt-3">
        @foreach (var reply in Model)
        {
            <div class="border-bottom pb-3 mb-3">
                <div class="d-flex align-items-center mb-2">
                    @* <span class="avatar avatar-md avatar-rounded me-2 flex-shrink-0" style="width: 40px; height: 40px;">
            <img src="~/uploads/logos/08149acb-8e3e-4032-be5a-29327a908182.png" class="rounded-circle" style="width: 100%; height: 100%; object-fit: cover;">
            </span> *@
                    <div>
                        <h6 class="mb-1">@reply.RepliedBy</h6>
                        <p class="text-muted mb-0"><i class="fa fa-calendar-bolt me-1"></i> @reply.RepliedAt.ToString("g")</p>
                    </div>
                </div>
                <p class="mb-2">@reply.ReplyMessage</p>
            </div>
        }
    </div>
}
else
{
    <p class="text-muted">No comments yet.</p>
}