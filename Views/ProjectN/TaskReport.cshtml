<div class="card">
    <div class="card-header d-flex align-items-center justify-content-between flex-wrap row-gap-3">
        <h5>Tasks List</h5>

        <div class="dropdown me-3">
            <a href="javascript:void(0);" class="dropdown-toggle btn btn-white d-inline-flex align-items-center" data-bs-toggle="dropdown">
                Select Priority
            </a>
            <ul class="dropdown-menu  dropdown-menu-end p-3">
                <li>
                    <a href="javascript:void(0);" class="dropdown-item rounded-1">Low</a>
                </li>
                <li>
                    <a href="javascript:void(0);" class="dropdown-item rounded-1">Medium</a>
                </li>
                <li>
                    <a href="javascript:void(0);" class="dropdown-item rounded-1">High</a>
                </li>
            </ul>
        </div>
        <div class="dropdown me-3">

            <select class="form-select form-select-sm me-3" id="statusFilter" onchange="sortTable();">
                <option value="inprogress">Inprogress</option>
                <option value="pending">Pending</option>
                <option value="completed">Completed</option>
                <option value="onhold">Onhold</option>
            </select>

        </div>
        <div class="dropdown">
            <div class="dropdown">


                <select class="form-select form-select-sm me-3" id="sortFilter" onchange="sortTable();">
                    <option value="asc">Ascending</option>
                    <option value="desc">Descending</option>
                    <option value="lastMonth">Last Month</option>
                    <option value="last7Days">Last 7 Days</option>
                </select>
            </div>
        </div>
    </div>


<div class="card-body p-0">
    <div>
        <table class="table" id="TaskId">
            <thead class="thead-light">
                <tr>
                    <th>Task ID</th>
                    <th>Task Name</th>
                    <th>Project Name</th>
                    <th>Due Date</th>
                    <th>Priority</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var t in Model)
                {
                    <tr>
                        <td>@t.TaskId</td>
                        <td>@t.Title</td>
                        <td>@t.Project?.ProjectName</td>
                        <td>@t.Deadline.ToString("yyyy-MM-dd")</td>
                        <td>
                            @if (t.Priority == "High")
                            {
                                <span class="badge badge-danger-transparent">
                                    <i class="ti ti-point-filled me-1"></i>High
                                </span>
                            }
                            else if (t.Priority == "Medium")
                            {
                                <span class="badge badge-warning-transparent">
                                    <i class="ti ti-point-filled me-1"></i>Medium
                                </span>
                            }
                            else if (t.Priority == "Low")
                            {
                                <span class="badge badge-success-transparent">
                                    <i class="ti ti-point-filled me-1"></i>Low
                                </span>
                            }

                        </td>
                        <td>
                            @if (t.Status == "Completed")
                            {
                                <span class="badge badge-success d-inline-flex align-items-center badge-xs">
                                    <i class="ti ti-point-filled me-1"></i>Completed
                                </span>
                            }
                            else if (t.Status == "Onhold")
                            {
                                <span class="badge badge-warning d-inline-flex align-items-center badge-xs">
                                    <i class="ti ti-point-filled me-1"></i>Onhold
                                </span>
                            }
                            else if (t.Status == "Inprogress")
                            {
                                <span class="badge badge-primary d-inline-flex align-items-center badge-xs">
                                    <i class="ti ti-point-filled me-1"></i>Inprogress
                                </span>
                            }
                            else if (t.Status == "Pending")
                            {
                                <span class="badge badge-danger d-inline-flex align-items-center badge-xs">
                                    <i class="ti ti-point-filled me-1"></i>Pending
                                </span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
