@section Scripts {
	<script src="https://cdn.jsdelivr.net/npm/chart.js@3.7.1/dist/chart.min.js"></script>

	<script>
		document.addEventListener("DOMContentLoaded", function () {
			// Get dynamic values from ViewBag
			var present = @Html.Raw(Json.Serialize(ViewBag.Present ?? 0));
			var late = @Html.Raw(Json.Serialize(ViewBag.Late ?? 0));
			var absent = @Html.Raw(Json.Serialize(ViewBag.Absent ?? 0));
			var sickLeave = @Html.Raw(Json.Serialize(ViewBag.SickLeave ?? 0));

			// Chart data
			var chartData = {
				labels: ['Present', 'Late', 'Absent', 'Sick Leave'],
				datasets: [{
					data: [present, late, absent, sickLeave],
				backgroundColor: ['#003366', '#4CAF50', '#F44336', '#FFC107'],
				 borderColor: ['#003366', '#4CAF50', '#F44336', '#FFC107'],
					borderWidth: 2
				}]
			};

			// Chart options
			var chartOptions = {
				responsive: true
				cutout: '70%', // Donut hole
				plugins: {
					legend: {
						display: false,
						position: 'top'
					},
					tooltip: {
						callbacks: {
							label: function (tooltipItem) {
								return tooltipItem.label + ": " + tooltipItem.raw;
							}
						}
					}
				}
			};

			// Render the chart
			var ctx = document.getElementById('leaves_chart');
			if (ctx) {
				new Chart(ctx, {
					type: 'doughnut',
					data: chartData,
					options: chartOptions
				});
			} else {
				console.error("Canvas element not found.");
			}
		});
	</script>
