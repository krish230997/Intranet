@model GoalTypeList



<form method="post" id="myform">
    <div class="card p-4">
        <h3 class="text-start mb-4">Add Goal</h3>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Goal Type</label>
            <input type="text" class="form-control" asp-for="GoalType">
            <span class="text-danger" asp-validation-for="GoalType"></span>
        </div>

        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Description</label>
            <input type="text" class="form-control" asp-for="Description">
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>

        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Status</label>
            <select class="form-select" asp-for="Status">
                <option value="">Select</option>
                <option value="Active">Active</option>
                <option value="Inactive">Inactive</option>
            </select>
        </div>

        <div class="d-flex justify-content-end mt-4">
           @*  <a asp-action="Index" class="btn btn-light">Cancel</a> *@
            <button type="submit" id="save" class="btn btn-primary">Add Goal</button>
        </div>
    </div>
    @* <input type="submit"  id="save" class="btn btn-primary" value="Add Goal" /> *@

</form>



<span class="text-danger">@TempData["msg"]</span>