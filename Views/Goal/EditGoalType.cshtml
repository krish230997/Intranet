@model Pulse360.Models.GoalTypeList



<div class="card p-4">
    <form asp-action="EditGoalType" method="post">
        <h3 class="text-start mb-4">Edit Goal Tracking</h3>
        <input type="hidden" asp-for="GoalId" />


        <div class="form-group">
            <label asp-for="GoalType" class="control-label"></label>
            <input asp-for="GoalType" class="form-control" />
            <span asp-validation-for="GoalType" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>



        <div class="form-group">
            <label asp-for="Status" class="control-label"></label>
            <select asp-for="Status" class="form-control">
                <option value="Active">Active</option>
                <option value="Inactive">Inactive</option>

            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
       
    </form>
</div>


