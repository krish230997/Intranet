                        <input type="text" class="form-control" id="createTitle" name="Title" required />
                    </div>
                    <div class="form-group">
                        <label for="createActivityType">Activity Type</label>
                        <input type="text" class="form-control" id="createActivityType" name="ActivityType" required />
                    </div>
