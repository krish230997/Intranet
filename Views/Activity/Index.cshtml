<div class="card">
    <div class="card-header d-flex align-items-center justify-content-between flex-wrap row-gap-3">
        <h5>Activity List</h5>
        <div class="d-flex my-xl-auto right-content align-items-center flex-wrap row-gap-3">
            <div class="me-3">
                <div class="input-icon-end position-relative">
                    <input type="text" class="form-control" id="searchInput" placeholder="Search Activities...">
                </div>
            </div>
            <div class="dropdown me-2">
                <select id="statusFilter" class="form-select">
                    <option value="">All Status</option>
                    <option value="ongoing">Ongoing</option>
                    <option value="pending">Pending</option>
                    <option value="rejected">Rejected</option>
                    <option value="completed">Completed</option>
                </select>
            </div>
            <div class="dropdown me-2">
                <select id="dateSort" class="form-select">
                    <option value="">Sort by Date</option>
                    <option value="asc">Oldest First</option>
                    <option value="desc">Newest First</option>
                </select>
            </div>
        </div>
    </div>

    <div class="card-body p-0">
        <table class="table" id="activitiesTable">
            <thead class="thead-light">
                <tr>
                    <th>Title</th>
                    <th>Type</th>
                    <th>Due Date</th>
                    <th>Owner</th>
                    <th>Status</th>
                    <th>Created Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    foreach (var activity in Model)
                    {
                        <tr>
                            <td>@activity.Title</td>
                            <td>@activity.ActivityType</td>
                            <td>@activity.DueDate.ToShortDateString()</td>
                            <td>@activity.Owner</td>
                            <td>@activity.Status</td>
                            <td>@activity.CreatedDate.ToShortDateString()</td>
                            <td>
                                <a data-bs-toggle="modal" data-bs-target="#editActivityModal"
                                   data-id="@activity.ActivityId" data-title="@activity.Title"
                                   data-activitytype="@activity.ActivityType"
                                   data-duedate="@activity.DueDate.ToString("yyyy-MM-dd")"
                                   data-owner="@activity.Owner" data-status="@activity.Status"
                                   data-description="@activity.Description">
                                    <i class="ti ti-edit"></i>
                                </a>
                                &nbsp;
                                <a data-bs-toggle="modal" data-bs-target="#deleteModal"
                                   data-id="@activity.ActivityId" data-title="@activity.Title">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center">No data found</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>















