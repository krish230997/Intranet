<div class="card">
    <div class="card-header d-flex align-items-center justify-content-between flex-wrap row-gap-3">
        <h5>Tasks List</h5>
        <div class="d-flex my-xl-auto right-content align-items-center flex-wrap row-gap-3">
            @*  <div class="me-3">
            <div class="input-icon-end position-relative">
            <input type="text" class="form-control date-range bookingrange" placeholder="dd/mm/yyyy - dd/mm/yyyy">
            <span class="input-icon-addon">
            <i class="ti ti-chevron-down"></i>
            </span>
            </div>
            </div> *@
            <div class="d-flex gap-3">
                <select class="form-select" id="priorityDropdown">
                    <option selected disabled>Select Priority</option>
                    <option value="Low">Low</option>
                    <option value="Medium">Medium</option>
                    <option value="High">High</option>
                </select>

                <select class="form-select" id="statusDropdown">
                    <option selected disabled>Select Status</option>
                    <option value="Completed">Completed</option>
                    <option value="Pending">Pending</option>
                    <option value="Inprogress">Inprogress</option>
                    <option value="Onhold">Onhold</option>
                </select>

                <select class="form-select" id="sortDropdown">
                    <option selected disabled>Sort By</option>
                    <option value="Recently Added">Recently Added</option>
                    <option value="Ascending">Ascending</option>
                    <option value="Descending">Descending</option>
                    <option value="Last Month">Last Month</option>
                    <option value="Last 7 Days">Last 7 Days</option>
                </select>
            </div>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="custom-datatable-filter table-responsive">
            <table class="table" id="TaskTable">
                <thead class="thead-light">
                    <tr>
                        <th>Task ID</th>
                        <th>Task Name</th>
                        <th>Project Name</th>
                        <th>Due Date</th>
                        <th>Priority</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in Model)
                    {
                        <tr>
                            <td>@t.TaskId</td>
                            <td>@t.Title</td>
                            <td>@t.Project?.ProjectName</td>
                            <td>@t.Deadline.ToString("yyyy-MM-dd")</td>
                            <td>
                                @if (t.Priority == "High")
                                {
                                    <span class="badge badge-danger-transparent">
                                        <i class="ti ti-point-filled me-1"></i>High
                                    </span>
                                }
                                else if (t.Priority == "Medium")
                                {
                                    <span class="badge badge-warning-transparent">
                                        <i class="ti ti-point-filled me-1"></i>Medium
                                    </span>
                                }
                                else if (t.Priority == "Low")
                                {
                                    <span class="badge badge-success-transparent">
                                        <i class="ti ti-point-filled me-1"></i>Low
                                    </span>
                                }

                            </td>
                            <td>
                                @if (t.Status == "Completed")
                                {
                                    <span class="badge badge-success d-inline-flex align-items-center badge-xs">
                                        <i class="ti ti-point-filled me-1"></i>Completed
                                    </span>
                                }
                                else if (t.Status == "Onhold")
                                {
                                    <span class="badge badge-warning d-inline-flex align-items-center badge-xs">
                                        <i class="ti ti-point-filled me-1"></i>On Hold
                                    </span>
                                }
                                else if (t.Status == "Inprogress")
                                {
                                    <span class="badge badge-primary d-inline-flex align-items-center badge-xs">
                                        <i class="ti ti-point-filled me-1"></i>In Progress
                                    </span>
                                }
                                else if (t.Status == "Pending")
                                {
                                    <span class="badge badge-danger d-inline-flex align-items-center badge-xs">
                                        <i class="ti ti-point-filled me-1"></i>Overdue
                                    </span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

