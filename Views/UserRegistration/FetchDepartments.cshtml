@model IEnumerable<Pulse360.Models.Department>

<h2>Departments List</h2>

<p>
    <a asp-action="AddDepartment" class="btn btn-primary">Add New Department</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Name)</th>
            <th>@Html.DisplayNameFor(model => model.First().Status)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                <td>
                    <a asp-action="EditDepartment" asp-route-id="@item.DepartmentId" class="btn btn-warning">Edit</a>
                    <form asp-action="DeleteDepartment" asp-route-id="@item.DepartmentId" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this department?');">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

