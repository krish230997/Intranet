@model IEnumerable<Pulse360.Models.Role>

<h2>Roles List</h2>

<p>
    <a asp-action="AddRole" class="btn btn-primary">Add New Role</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().RoleName)</th>
            <th>@Html.DisplayNameFor(model => model.First().Status)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.RoleName)</td>
                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                <td>
                    <a asp-action="EditRole" asp-route-id="@item.RoleId" class="btn btn-warning">Edit</a>
                    <form asp-action="DeleteRole" asp-route-id="@item.RoleId" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this role?');">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
