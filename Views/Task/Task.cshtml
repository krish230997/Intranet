@model Pulse360.Models.Tasks
@TempData["title"]
@{
    ViewData["Title"] = "Add New Task";
    var projects = ViewBag.Projects as IEnumerable<dynamic>;
    var members = ViewBag.Members as IEnumerable<string>;
}
@if(TempData["msg"]!=null)
{
    <span class="text-danger">@TempData["msg"]</span>
}

<partial name="Notification"></partial>

<div class="card p-4">
    @* <span class="text-danger">@TempData["msg"]</span> *@
    <form asp-action="Task" method="post" enctype="multipart/form-data">
        <div class="modal-body">
            <div class="modal-dialog modal-dialog-centered modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Add New Task</h4>

                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-12">
                                <div class="mb-3">
                                    <label asp-for="Title" class="form-label">Title</label>
                                    <input type="text" asp-for="Title" class="form-control" required>
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Deadline" class="form-label">Due Date</label>
                                    <input asp-for="Deadline" type="date" class="form-control" required>
                                    <span asp-validation-for="Deadline" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="ProjectId" class="form-label">Select Project</label>
                                    <select id="projectDropdown" name="ProjectId" asp-for="ProjectId" class="form-control">
                                        <option value="">Select a Project</option>
                                        @foreach (var project in ViewBag.Projects)
                                        {
                                            <option value="@project.ProjectId">@project.ProjectName</option>
                                        }
                                    </select>
                                    <span asp-validation-for="ProjectId" class="text-danger"></span>
                                </div>
                            </div>

                           
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Team Members</label>
                                    <div class="dropdown">
                                        <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                            Select Team Members
                                        </button>
                                        <ul class="dropdown-menu" id="teamMembersDropdown" aria-labelledby="dropdownMenuButton">
                                            <!-- Members will be populated dynamically -->
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            
                            @* <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Team Members</label>
                                    <div class="dropdown">
                                        <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                            Select Team Members
                                        </button>
                                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                            @foreach (var member in ViewBag.Members)
                                            {
                                                <li>
                                                    <input type="checkbox" class="form-check-input" name="AssignedUserIds" value="@member.UserId" id="member_@member.UserId">
                                                    <label class="form-check-label" for="member_@member.UserId">@member.FullName</label>
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                </div>
                            </div> *@
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Status" class="form-label">Status</label>
                                    <select asp-for="Status" class="form-select">
                                        <option value="">Select</option>
                                        <option value="Inprogress">Inprogress</option>
                                        <option value="Completed">Completed</option>
                                        <option value="Pending">Pending</option>
                                        <option value="Onhold">Onhold</option>
                                    </select>
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Priority" class="form-label">Priority</label>
                                    <select asp-for="Priority" class="form-select">
                                        <option value="">Select</option>
                                        <option value="High">High</option>
                                        <option value="Medium">Medium</option>
                                        <option value="Low">Low</option>
                                    </select>
                                    <span asp-validation-for="Priority" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="mb-3">
                                    <label asp-for="Description" class="form-label">Description</label>
                                    <textarea asp-for="Description" class="form-control" required></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <label for="file" class="form-label">Upload Attachment</label>
                                <input type="file" name="file" class="form-control" required>

                                <span asp-validation-for="FilePath" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="modal-footer">
                        <br />
                        @if (TempData["Smsg"] != null)
                        {
                            <span class="text-success">@TempData["Smsg"]</span>
                        }
                        <button type="submit" class="btn btn-primary">Add New Task</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
    $(document).ready(function () {
        $('#projectDropdown').change(function () {
            var projectId = $(this).val();
            if (projectId) {
                $.ajax({
                    url: '/Task/GetProjectMembers',
                    type: 'GET',
                    data: { projectId: projectId },
                    success: function (response) {
                        var membersDropdown = $('#teamMembersDropdown');
                        membersDropdown.empty(); // Clear existing members

                        if (!response.success || response.data.length === 0) {
                            membersDropdown.append('<li class="text-muted px-2">No members found</li>');
                        } else {
                            $.each(response.data, function (index, member) {
                                var listItem = `<li class="dropdown-item">
                                    <input type="checkbox" class="form-check-input member-checkbox" name="AssignedUserIds" value="${member.userId}" id="member_${member.userId}">
                                    <label class="form-check-label" for="member_${member.userId}">${member.fullName}</label>
                                </li>`;
                                membersDropdown.append(listItem);
                            });
                        }
                    },
                    error: function () {
                    alert("Error fetching members. Please try again.");
                }
                });
            }
        });

        // Event delegation for dynamically loaded checkboxes
        $(document).on('change', '.member-checkbox', function () {
            var selectedMembers = $('.member-checkbox:checked')
                .map(function () { return $(this).next('label').text(); })
                .get();

            var dropdownButton = $('#dropdownMenuButton');
            dropdownButton.text(selectedMembers.length > 0 ? selectedMembers.join(', ') + " (Selected)" : "Select Team Members");
        });

        // Ensure Bootstrap dropdown toggles properly
        $('#dropdownMenuButton').click(function (event) {
            event.stopPropagation();
            $('#teamMembersDropdown').toggleClass('show');
        });

        // Close dropdown when clicking outside
        $(document).click(function (e) {
            if (!$(e.target).closest('.dropdown').length) {
                $('#teamMembersDropdown').removeClass('show');
            }
        });

        // Prevent dropdown from closing when clicking inside
        $(document).on('click', '.dropdown-menu', function (e) {
            e.stopPropagation();
        });
    });
</script>


<script>

    $(document).ready(function () {
        $('#member-input').keypress(function (e) {
            if (e.which == 13) {
                e.preventDefault();
                var name = $(this).val().trim();
                if (name) {
                    $.post('/Task/AddMember', { name: name }, function (data) {
                        if (data.success) {
                            $('#team-members').append('<span class="team-member">' + data.name +
                                ' <button type="button" class="remove-btn">x</button></span>');
                            $('#member-input').val('');
                        }
                    });
                }
            }
        });

        $(document).on('click', '.remove-btn', function () {
            $(this).parent().remove();
        });
    });

</script>

<style>
    #team-container {
        border: 1px solid #ccc;
        padding: 10px;
        width: 400px;
        display: flex;
        flex-wrap: wrap;
        align-items: center;
    }

    .team-member {
        background: #e0e0e0;
        padding: 5px;
        margin: 5px;
        border-radius: 5px;
        display: inline-flex;
        align-items: center;
    }

    .remove-btn {
        margin-left: 5px;
        border: none;
        background: none;
        cursor: pointer;
    }

    #member-input {
        border: none;
        outline: none;
        margin-left: 10px;
        flex-grow: 1;
    }
</style>