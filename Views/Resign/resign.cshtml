@model Resign
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Offer Letter</title>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.3.6/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.3.6/js/buttons.html5.min.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 20px;
        }

        .container {
            width: 70%;
            margin: 0 auto;
            background-color: #fff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            color: #333;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            font-size: 16px;
            font-weight: bold;
            color: #333;
        }

        input[type="text"], input[type="email"], input[type="date"], input[type="number"] {
            padding: 10px;
            font-size: 16px;
            width: 100%;
            margin-top: 5px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .btn {
            padding: 12px 24px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            width: 100%;
        }


        .footer {
            text-align: center;
            margin-top: 30px;
            color: #777;
        }

        .form-title {
            margin-bottom: 20px;
        }

    </style>
</head>
<body>

    <div class="d-md-flex d-block align-items-center justify-content-between page-breadcrumb mb-3">
        <div class="my-auto mb-2">
            <h2 class="mb-1">Generated Resign Letter</h2>
            <nav>
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item">
                        <a href="index.html"><i class="ti ti-smart-home"></i></a>
                    </li>
                    <li class="breadcrumb-item">
                        Admin
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Generated Resign Letter</li>
                </ol>
            </nav>
        </div>

    </div>

    <br />
    <div class="card">
        @if (TempData["success"] != null)
        {
            <div class="alert alert-success">@TempData["success"]</div>
        }
        <div class="card-header d-flex align-items-center justify-content-between flex-wrap row-gap-3">
            <h5 class="mb-0">Generated Resign Letter</h5>
        </div>
        <div class="card-body">
            <div class="container">
                <h1 class="form-title">Resignation Letter</h1>

                <form method="post">

                    <div class="form-group">
                        <label for="employeeName">Employee Name:</label>
                        <input type="text" id="employeeName" asp-for="employeeName" required>
                    </div>

                    <div class="form-group">
                        <label for="employeeEmail">Employee Email:</label>
                        <input type="email" id="employeeEmail" asp-for="employeeEmail" required>
                    </div>

                    <div class="form-group">
                        <label>Select Templete</label>
                        <input type="text" id="selectedTemplate" name="Template" value="@ViewData["SelectedTemplate"]" readonly>
                    </div>

                    <div class="form-group">
                        <label for="employeeEmail">Department Head Name:</label>
                        <input type="text" id="employeeEmail" asp-for="departmentHead" required>
                    </div>

                    <div class="form-group">
                        <label for="startDate">Last Date:</label>
                        <input type="date" id="startDate" asp-for="lastDay" required>
                    </div>



                    <div class="form-group">
                        <label for="acceptanceDeadline">Resignation Date:</label>
                        <input type="date" id="acceptanceDeadline" asp-for="resignationDate" required>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Submit Resignation</button>
                    </div>
                </form>
            </div>
        </div>
    </div>



</body>
</html>
