                                    <td>
                                        <select class="form-control" asp-for="QualityofWork">
                                            <option>None</option>
                                            <option>Beginner</option>
                                            <option>Intermediate</option>
                                            <option>Advanced</option>
                                            <option>Expert / Leader</option>
                                        </select>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Efficiency </td>
                                    <td>@ViewBag.Indicators?.Efficiency</td>
                                    <td>
                                        <select class="form-control" asp-for="Efficiency    ">
                                            <option>None</option>
                                            <option>Beginner</option>
                                            <option>Intermediate</option>
                                            <option>Advanced</option>
                                            <option>Expert / Leader</option>
                                        </select>
                                    </td>
                                </tr>

                                <!-- Repeat for other technical indicators -->
                            </tbody>
                        </table>
                    </div>
                </div>
                
                <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                    <br />
                    <div>
                        
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Indicator</th>
                                    <th>Expected Value</th>
                                    <th>Set Value</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Integrity</td>
                                    <td>@ViewBag.Indicators?.Integrity</td>
                                    <td>
                                        <select class="form-control" asp-for="Integrity">
                                            <option>None</option>
                                            <option>Beginner</option>
                                            <option>Intermediate</option>
                                            <option>Advanced</option>
                                            <option>Expert / Leader</option>
                                        </select>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Professionalism</td>
                                    <td>@ViewBag.Indicators?.Professionalism</td>
                                    <td>
                                        <select class="form-control" asp-for="Professionalism">
                                            <option>None</option>
                                            <option>Beginner</option>
                                            <option>Intermediate</option>
                                            <option>Advanced</option>
                                            <option>Expert / Leader</option>
                                        </select>
                                    </td>
                                </tr>
                                <tr>
                                    <td>TeamWork</td>
                                    <td>@ViewBag.Indicators?.TeamWork</td>
                                    <td>
                                        <select class="form-control" asp-for="TeamWork">
                                            <option>None</option>
                                            <option>Beginner</option>
                                            <option>Intermediate</option>
                                            <option>Advanced</option>
                                            <option>Expert / Leader</option>
                                        </select>
                                    </td>
                                </tr>
                                <tr>
                                    <td>CriticalThinking</td>
                                    <td>@ViewBag.Indicators?.CriticalThinking</td>
                                    <td>
                                        <select class="form-control" asp-for="CriticalThinking">
                                            <option>None</option>
                                            <option>Beginner</option>
                                            <option>Intermediate</option>
                                            <option>Advanced</option>
                                            <option>Expert / Leader</option>
                                        </select>
                                    </td>
                                </tr>
                                <tr>
                                    <td>ConflictManagement</td>
