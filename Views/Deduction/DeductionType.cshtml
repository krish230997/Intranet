@model DeductionType

<style>
	.payroll-btns {
		display: flex;
		justify-content: space-between; /* Distribute space between the buttons */
		gap: 15px; /* Add some space between the two dropdowns */
	}

	.dropdown {
		flex: 1; /* Ensures that both dropdowns occupy equal space */
	}

	.dropdown-menu {
		position: absolute;
		top: 100%;
		z-index: 1050;
	}

	.dropdown-menu {
		position: absolute !important; /* Ensure the dropdown is not constrained */
		z-index: 1050; /* Ensure dropdown appears on top of other elements */
		top: 100%; /* Position below the button */
	}

	.payroll-btns {
		display: flex;
		justify-content: space-between;
	}

	.dropdown {
		position: relative; /* Ensure the dropdown button has a relative positioning context */
	}

</style>

<div class="d-flex flex-wrap gy-2 justify-content-between my-4">
	<div class="payroll-btns">
		<div class="dropdown">
			<a asp-action="EarningType" asp-controller="Earning" class="dropdown-toggle btn btn-white d-inline-flex align-items-center" data-bs-toggle="dropdown">
				Earning
			</a>
			<ul class="dropdown-menu dropdown-menu-start p-3">
				<!-- Change to dropdown-menu-start -->
				<li>
					<a asp-action="EarningType" asp-controller="Earning" class="dropdown-item rounded-1" id="exportPdfBtn">
						Earning type
					</a>
				</li>
				<li>
					<a asp-action="Earning" asp-controller="Earning" class="dropdown-item rounded-1" id="exportExcelBtn">
						Earning
					</a>
				</li>
			</ul>
		</div>

		<div class="dropdown">
			<a asp-action="DeductionType" asp-controller="Deduction" class="dropdown-toggle btn btn-white d-inline-flex align-items-center active border" data-bs-toggle="dropdown">
				Deduction
			</a>
			<ul class="dropdown-menu dropdown-menu-start p-3">
				<!-- Change to dropdown-menu-start -->
				<li>
					<a asp-action="DeductionType" asp-controller="Deduction" class="dropdown-item rounded-1" id="exportPdfBtn">
						Deduction type
					</a>
				</li>
				<li>
					<a asp-action="Deduction" asp-controller="Deduction" class="dropdown-item rounded-1" id="exportExcelBtn">
						Deduction
					</a>
				</li>
			</ul>
		</div>
	</div>

	<div class="mb-2">
		<a href="#" id="openmodal" data-bs-target="#deduction_type" class="btn btn-primary d-flex align-items-center">
			<i class="ti ti-circle-plus me-2"></i>Add Deduction Type
		</a>
	</div>
</div>

<div class="modal" id="deduction_type">
	<div class="modal-dialog modal-dialog-centered modal-md">
		<div class="modal-content">
			<div class="modal-header">
				<h4 class="modal-title">Add Deduction Type</h4>
				<button type="button" class="btn-close custom-btn-close" data-bs-dismiss="modal" aria-label="Close">
					<i class="ti ti-x"></i>
				</button>
			</div>
			<div class="modal-body pb-0">
				<form method="post" id="deductiontypeform">
					Deduction Name <input type="text" class="form-control" placeholder="Enter Deduction Type Name" name="DeductionsName" /><br />
				</form>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-white border me-2" data-bs-dismiss="modal">Cancel</button>
				<button type="submit" class="btn btn-primary" id="addbtn">Add Deduction Type</button>
			</div>
		</div>
	</div>
</div>

<div class="card-body p-0">
	<div class="table-responsive">
		<table class="table">
			<thead class="thead-light">
				<tr>
					<th>Id</th>
					<th>Deduction Type Name</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody id="deductiontypedata">
			</tbody>
		</table>
	</div>
</div>

<div class="modal" id="editdeductiontype">
	<div class="modal-dialog modal-dialog-centered modal-md">
		<div class="modal-content">
			<div class="modal-header">
				<h4 class="modal-title">Edit Deduction Type</h4>
				<button type="button" class="btn-close custom-btn-close" data-bs-dismiss="modal" aria-label="Close">
					<i class="ti ti-x"></i>
				</button>
			</div>
			<div class="modal-body pb-0">
				<form method="post" id="editdeductiontypeform">
					<input type="hidden" name="Id" id="editDeductTypeId" />
					Deduction Name <input type="text" class="form-control" id="editDeductionsName" name="DeductionsName" /><br />
				</form>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-white border me-2" data-bs-dismiss="modal">Cancel</button>
				<button type="submit" class="btn btn-primary" id="editbtn">Edit Deduction Type</button>
			</div>
		</div>
	</div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/deductiontypejavascript.js"></script>