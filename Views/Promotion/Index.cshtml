@{
    ViewData["Title"] = "Promotion Management";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h2>Promotion</h2>
        <button id="addPromotionButton" class="btn btn-primary"><i class="ti ti-circle-plus me-2"></i>Add Promotion</button>
    </div><br />

    <div class="card">
        <div class="card-header d-flex align-items-center justify-content-between flex-wrap row-gap-3">
            <h5 class="d-flex align-items-center">Promotion List</h5>
            <div class="d-flex align-items-center flex-wrap row-gap-3">
                <!-- Search Input -->
                @* <div class="input-icon position-relative me-2">
                    <span class="input-icon-addon">
                        <i class="ti ti-search"></i>
                    </span>
                    <input type="text" id="promotionSearch" class="form-control" placeholder="Search....">
                </div> *@

                <!-- Sort By Dropdown -->
                <div class="dropdown">
                    <select id="sortBy" class="form-select">
                        <option value="ascending">Sort By: Ascending</option>
                        <option value="descending">Descending</option>
                    </select>
                </div>

                <!-- Filter By Date Range -->
                <div class="dropdown">
                    <a href="javascript:void(0);" class="dropdown-toggle btn btn-white d-inline-flex align-items-center fs-12" data-bs-toggle="dropdown">
                        <p class="fs-12 d-inline-flex me-1">Filter By Date : </p>
                        All Records
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end p-3">
                        <li><a href="javascript:void(0);" class="dropdown-item" data-filter="today">Today</a></li>
                        <li><a href="javascript:void(0);" class="dropdown-item" data-filter="tomorrow">Tomorrow</a></li>
                        <li><a href="javascript:void(0);" class="dropdown-item" data-filter="last7days">Last 7 Days</a></li>
                        <li><a href="javascript:void(0);" class="dropdown-item" data-filter="lastmonth">Last Month</a></li>
                        <li><a href="javascript:void(0);" class="dropdown-item" data-filter="all">All Records</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Promotions Table -->
        <table id="promotionTable" class="table table-bordered">
            <thead>
                <tr>
                    
                    <th>Employee Name</th>
                    <th>Designation From</th>
                    <th>Designation To</th>
                    <th>Promotion Date</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody id="table">
            </tbody>
        </table>
    </div>
</div>

<!-- Modal for Add Promotion -->
<div class="modal fade" id="addPromotionModal" tabindex="-1" aria-labelledby="addPromotionModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addPromotionModalLabel">Add Promotion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="addPromotionPartial"></div>
            </div>
        </div>
    </div>
</div>

<!-- Edit Promotion Modal -->
<div class="modal fade" id="editPromotionModal" tabindex="-1" aria-labelledby="editPromotionModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editPromotionModalLabel">Edit Termination</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="editPromotionPartial"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

    <script>
              $(document).ready(function () {
            // Initialize DataTable
            var table = $('#promotionTable').DataTable();

            // Search functionality
            $('#promotionSearch').on('keyup', function () {
                const searchValue = $(this).val().toLowerCase();
                $('#promotionTable tbody tr').each(function () {
                    var rowText = $(this).text().toLowerCase();
                    $(this).toggle(rowText.indexOf(searchValue) > -1);
                });
            });

                          // Sorting Functionality
        $("#sortBy").on("change", function () {
            let sortOrder = $(this).val();
            let rows = $('#promotionTable tbody tr').get();

            rows.sort(function (a, b) {
                let nameA = $(a).find('td').eq(0).text().toLowerCase(); // Employee Name column
                let nameB = $(b).find('td').eq(0).text().toLowerCase();

                if (sortOrder === "ascending") {
                    return nameA.localeCompare(nameB);
                } else if (sortOrder === "descending") {
                    return nameB.localeCompare(nameA);
                }
            });

            $.each(rows, function (index, row) {
                $('#promotionTable tbody').append(row);
            });
        });


            // Date range filter functionality
            $('.dropdown-item[data-filter]').on('click', function () {
                const filterValue = $(this).data('filter');
                const today = new Date();

                $('#promotionTable tbody tr').each(function () {
                    const promotionDate = new Date($(this).find('td').eq(3).text()); // 4th column: Promotion Date

                    let showRow = false;

                    if (filterValue === 'today' && promotionDate.toDateString() === today.toDateString()) {
                        showRow = true;
                    }
                    else if (filterValue === 'tomorrow') {
                        let tomorrow = new Date();
                        tomorrow.setDate(today.getDate() + 1);
                        if (promotionDate.toDateString() === tomorrow.toDateString()) {
                            showRow = true;
                        }
                    }
                    else if (filterValue === 'last7days' && (today - promotionDate) <= 7 * 24 * 60 * 60 * 1000) {
                        showRow = true;
                    }
                    else if (filterValue === 'lastmonth') {
                        let lastMonth = new Date();
                        lastMonth.setMonth(today.getMonth() - 1);

                        if (promotionDate.getMonth() === lastMonth.getMonth() &&
                            promotionDate.getFullYear() === lastMonth.getFullYear()) {
                            showRow = true;
                        }
                    }
                    else if (filterValue === 'all' || !filterValue) {
                        showRow = true;
                    }

                    $(this).toggle(showRow);
                });
            });
        });

    </script>
}

<script src="/js/promotion.js"></script>