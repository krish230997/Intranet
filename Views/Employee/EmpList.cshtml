	<script>

		$(document).ready(function () {

			function updateFieldsBasedOnRole(roleDropdownId, departmentContainerId, designationContainerId, managerContainerId, managerDropdownId) {
				var selectedRole = $("#" + roleDropdownId + " option:selected").text();

				if (selectedRole === "Admin") {
					$("#" + departmentContainerId).hide();
					$("#" + designationContainerId).hide();
					$("#" + managerContainerId).hide();
					$("#" + managerDropdownId).prop("disabled", true).val("");

				} else if (selectedRole === "Manager") {
					$("#" + departmentContainerId).show();
					$("#" + designationContainerId).show();
					$("#" + managerContainerId).hide();
					$("#" + managerDropdownId).prop("disabled", true).val("");

				} else { // Employee
					$("#" + departmentContainerId).show();
					$("#" + designationContainerId).show();
					$("#" + managerContainerId).show();
					$("#" + managerDropdownId).prop("disabled", false);
				}
			}

			function updateManagerDropdown(departmentDropdownId, managerDropdownId, reportingManagerInputId) {
				var selectedDepartment = $("#" + departmentDropdownId).val();

				if (selectedDepartment) {
					$("#" + managerDropdownId).prop("disabled", false);

					// Show managers only from selected department
					$("#" + managerDropdownId + " option").each(function () {
						var managerDepartment = $(this).data("department-id");

						if (managerDepartment == selectedDepartment || managerDepartment === undefined) {
							$(this).show();
						} else {
							$(this).hide();
						}
					});

					// Retain selected manager
					$("#" + reportingManagerInputId).val($("#" + managerDropdownId + " option:selected").text());
				} else {
					$("#" + managerDropdownId).prop("disabled", true).val("");
					$("#" + reportingManagerInputId).val("");
				}
			}

			// Handle Role Change (Add & Edit Employee)
			// $("#roleDropdown, #editRoleDropdown").change(function () {
			// 	var roleDropdownId = $(this).attr("id");
			// 	var isEditMode = roleDropdownId === "editRoleDropdown";

			// 	updateFieldsBasedOnRole(
			// 		roleDropdownId,
			// 		isEditMode ? "editDepartmentContainer" : "departmentContainer",
			// 		isEditMode ? "editDesignationContainer" : "designationContainer",
			// 		isEditMode ? "editManagerContainer" : "managerContainer",
			// 		isEditMode ? "editManagerDropdown" : "managerDropdown"
			// 	);
			// });

					$("#roleDropdown, #editRoleDropdown").change(function () {
			var roleDropdownId = $(this).attr("id");
			var isEditMode = roleDropdownId === "editRoleDropdown";

			updateFieldsBasedOnRole(
				roleDropdownId,
				isEditMode ? "editDepartmentContainer" : "departmentContainer",
				isEditMode ? "editDesignationContainer" : "designationContainer",
				isEditMode ? "editManagerContainer" : "managerContainer",
				isEditMode ? "editManagerDropdown" : "managerDropdown"
			);
		});


			// Handle Department Change (Add & Edit Employee)
			$("#departmentDropdown, #editDepartmentDropdown").change(function () {
				var departmentDropdownId = $(this).attr("id");
				var isEditMode = departmentDropdownId === "editDepartmentDropdown";

				updateManagerDropdown(
					departmentDropdownId,
					isEditMode ? "editManagerDropdown" : "managerDropdown",
					isEditMode ? "editReportingManagerName" : "ReportingManagerName"
				);

				//  Store Department Name in Hidden Input
				$("#" + (isEditMode ? "editDepartmentName" : "DepartmentName")).val($(this).find("option:selected").text());
			});

			// Handle Designation Change (Add & Edit Employee)
			$("#designtionDropdown, #editDesigntionDropdown").change(function () {
				var designationDropdownId = $(this).attr("id");
				var isEditMode = designationDropdownId === "editDesigntionDropdown";

				//  Store Designation Name in Hidden Input
				$("#" + (isEditMode ? "editDesignationName" : "DesignationName")).val($(this).find("option:selected").text());
			});

			// Handle Manager Change (Save selected Manager Name)
			$("#managerDropdown, #editManagerDropdown").change(function () {
				var managerDropdownId = $(this).attr("id");
				var isEditMode = managerDropdownId === "editManagerDropdown";

				var selectedManagerName = $("#" + managerDropdownId + " option:selected").text();
				$("#" + (isEditMode ? "editReportingManagerName" : "ReportingManagerName")).val(selectedManagerName);
			});

			// Ensure fields are set correctly when opening Edit Employee Modal
			$("#editModal").on("show.bs.modal", function () {
				updateFieldsBasedOnRole("editRoleDropdown", "editDepartmentContainer", "editDesignationContainer", "editManagerContainer", "editManagerDropdown");
			});

			// Ensure fields are set correctly when opening Add Employee Modal
			$("#exampleModal").on("show.bs.modal", function () {
				updateFieldsBasedOnRole("roleDropdown", "departmentContainer", "designationContainer", "managerContainer", "managerDropdown");
			});

		});

