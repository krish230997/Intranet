@{
    ViewData["Title"] = "Select User";
}

<h2 class="text-center font-bold text-2xl my-4">Select Your User</h2>

<div class="flex justify-center">
    <form method="get" action="@Url.Action("Index", "Chat")" class="bg-white p-6 rounded-lg shadow-md">
        <label class="block text-lg font-medium mb-2">Select Your User:</label>
        <select name="userId" class="border p-2 rounded w-full" required>
            <option value="">-- Select User --</option>
            @foreach (var user in ViewBag.Users)
            {
                <option value="@user.UserId">@user.FirstName</option>
            }
        </select>
        <button type="submit" class="mt-4 bg-blue-500 text-white px-4 py-2 rounded">Continue</button>
    </form>
</div>
